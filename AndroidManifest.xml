<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mcloudsync"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application        
        android:icon="@drawable/ic_launcher"
        android:label="mCloudSync"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".LoginChoiceActivity"
            android:label="LoginChoiceActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>       
        <activity
            android:name=".LoginScreenActivity"
            android:label="LoginScreenActivity" >
        </activity>
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="ForgotPasswordActivity" >
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="SignUpMainActivity" >
        </activity>
        <activity
            android:name=".HomeScreenActivity"
            android:label="HomeScreenActivity" >
        </activity>
        <activity
            android:name=".BackUpListActivity"
            android:label="BackUpListActivity" >
        </activity>        
    </application>

</manifest>